# Production Environment Variables
# Copy this to .env.production and fill in real values

# =============================================================================
# DATABASE (DigitalOcean Managed PostgreSQL or Docker)
# =============================================================================
DATABASE_URL=postgresql://dental:YOUR_DB_PASSWORD@localhost:5432/dental_agent
DB_PASSWORD=YOUR_SECURE_PASSWORD_HERE

# =============================================================================
# REDIS (For Celery background tasks)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Your domain (e.g., api.dentalvoice.ai)
API_BASE_URL=https://YOUR_DOMAIN.com
WS_BASE_URL=wss://YOUR_DOMAIN.com

# JWT secret - generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=GENERATE_A_SECURE_64_CHAR_HEX_STRING

# =============================================================================
# TWILIO (Phone calls & SMS)
# =============================================================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX

# Mode: SIMULATED (no real calls) or TWILIO (real calls)
TELEPHONY_MODE=TWILIO

# =============================================================================
# DEEPGRAM (Speech-to-Text & Text-to-Speech)
# =============================================================================
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# =============================================================================
# OPENAI (LLM for agent intelligence)
# =============================================================================
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# OPTIONAL: ANTHROPIC (Alternative LLM)
# =============================================================================
# ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# OPTIONAL: GOOGLE AI (Gemini for analysis)
# =============================================================================
# GOOGLE_API_KEY=AIzaxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/api.log

# =============================================================================
# SECURITY
# =============================================================================
# Comma-separated list of allowed origins for CORS
CORS_ORIGINS=https://YOUR_DOMAIN.com,https://dashboard.YOUR_DOMAIN.com

# Encryption key for database field encryption (Fernet key)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=GENERATE_FERNET_KEY_HERE

# Session secret for cookie/session security (40+ chars recommended)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(50))"
SESSION_SECRET=GENERATE_A_SECURE_50_CHAR_SESSION_SECRET
SESSION_DURATION_HOURS=24
