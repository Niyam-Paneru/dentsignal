[MASTER]
# DentSignal Pylint Configuration
# Suppress noisy rules that generate thousands of alerts
# while keeping security-relevant checks enabled

# Ignore test files and generated code
ignore-patterns=test_.*,__pycache__,archive

[MESSAGES CONTROL]
# Disable rules that create excessive noise in code scanning:
# C0114: missing-module-docstring
# C0115: missing-class-docstring
# C0116: missing-function-docstring
# C0103: invalid-name (short variable names like 'e', 'db', 'ws')
# C0301: line-too-long
# C0302: too-many-lines
# C0411: wrong-import-order
# C0412: ungrouped-imports
# C0413: wrong-import-position
# C0415: import-outside-toplevel
# R0801: duplicate-code
# R0901: too-many-ancestors
# R0902: too-many-instance-attributes
# R0903: too-few-public-methods
# R0911: too-many-return-statements
# R0912: too-many-branches
# R0913: too-many-arguments
# R0914: too-many-locals
# R0915: too-many-statements
# W0511: fixme (TODO/FIXME comments)
# W0612: unused-variable
# W0613: unused-argument
# W0622: redefined-builtin
# W0707: raise-missing-from
# W1203: logging-fstring-interpolation
# E0401: import-error (can't resolve local imports in CI)
disable=C0114,C0115,C0116,C0103,C0301,C0302,C0411,C0412,C0413,C0415,
        R0801,R0901,R0902,R0903,R0911,R0912,R0913,R0914,R0915,
        W0511,W0612,W0613,W0622,W0707,W1203,
        E0401

[FORMAT]
max-line-length=120

[SIMILARITIES]
min-similarity-lines=10
